{% extends '@Contao/block_unsearchable' %}

{% block content %}
    {# Use this button to trigger the modal window #}
    <button type="button" class="btn btn-sm btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#tourDifficultiesModal">
        Schwierigkeitsgrade
    </button>

    {# tour tech difficulties bootstrap modal window #}
    <div class="modal fade" id="tourDifficultiesModal" tabindex="-1" role="dialog" aria-labelledby="tourDifficultiesModal" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-fullscreen-sm-down" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="tourDifficultiesModalTitle">Schwierigkeitsgrade</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schliessen"></button>
                </div>
                <div class="modal-body">
                    <div>
                        {% for difficulty in difficulties %}
                            {% if difficulty.isCatStart|default %}
                                <div class="row">
                                    <div class="col-12"><h3 class="mt-3 mb-3">{{ difficulty.catTitle }}</h3></div>
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="col-2 border-top border-light-subtle pt-2 pb-2">{{ difficulty.shortcut }}</div>
                                <div class="col-10 border-top border-light-subtle pt-2 pb-2">
                                    <strong>{{ difficulty.title }}</strong>
                                    <br>
                                    {{ difficulty.description }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="modal-footer d-none">
                    <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Schliessen</button>
                </div>
            </div>
        </div>
    </div>
    {# modal window end #}

{% endblock %}
